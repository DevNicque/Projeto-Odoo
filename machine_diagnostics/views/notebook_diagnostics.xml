<?xml version="1.0" encoding="utf-8"?>
<odoo>


  <record id="notebook_diagnostics_view_tree" model="ir.ui.view">
    <field name="name">notebook.diagnostics.tree</field>
    <field name="model">notebook.diagnostics</field>
    <field name="arch" type="xml">
      <tree string="Prontuário de Notebooks" default_order="name">
        <field name="name" required="1" widget="handle"/>
      </tree>
    </field>
  </record>

  <record id="notebook_diagnostics_view_form" model="ir.ui.view">
    <field name="name">notebook.diagnostics.form</field>
    <field name="model">notebook.diagnostics</field>
    <field name="arch" type="xml">
      <form string="Prontuário de Notebooks">
        <sheet>
          <div class="oe_title" style="background-color:rgb(255, 165, 0, 0.5);">
            <h1>
              <field name="name" required="1"/>
            </h1>
          </div>

          <font color="purple" modifiers="{}">
          	<group>
          		<field name="notediag_records_id" string="Registros"/>
          	</group>
          </font>
        </sheet>
      </form>
    </field>
  </record>

  <record id="notebook_diagnostics_action_form" model="ir.actions.act_window">
    <field name="name">Prontuário de Notebooks</field>
    <field name="res_model">notebook.diagnostics</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html"></field>
  </record>


  <menuitem id="menu_root_machine_diagnostics"
    name="Prontuário de Máquinas"
    web_icon="machine_diagnostics,static/description/diagnostics.png"
    sequence="1"/>

  <menuitem id="menu_notebook_diagnostics"
   name="Prontuário de Notebooks"
   parent="menu_root_machine_diagnostics"
   action="notebook_diagnostics_action_form"
   sequence="2"/>


</odoo>
